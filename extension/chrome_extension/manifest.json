{
  "manifest_version": 3,
  "name": "Agentic Form Auto-fill",
  "version": "1.1",
  "description": "Auto-fills forms using a local backend agent.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:4000/*",
    "http://localhost:8000/*",
    "http://localhost:8001/*",
    "http://127.0.0.1:8001/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:4000/*",
        "http://localhost:8001/*",
        "https://*.gov.in/*",
        "https://*.nic.in/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
}